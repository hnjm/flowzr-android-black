<resources>

    <!-- ======================================================================================================== -->

    <style name="Theme.Financisto" parent="@style/Theme.AppCompat.NoActionBar">
<!--        <item name="android:actionBarStyle">@style/ActionBar.Solid.Financisto</item> -->
        <item name="actionBarStyle">@style/ActionBar.Solid.Financisto</item>
        <item name="colorControlActivated">@color/f_blue_lighter1</item>
        <item name="colorAccent">@color/f_blue_lighter1</item>
        <item name="alertDialogTheme">@style/dialog</item>
    </style>


    <style name="dialog" parent="Base.Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/text_accent</item>
    </style>


    <!-- Action Bar -->
    <!-- http://jgilfelt.github.io/android-actionbarstylegenerator/ -->
    <!-- ======================================================================================================== -->
    <style name="ActionBar.Solid.Financisto" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_financisto</item>
        <!--
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_financisto</item>

        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_financisto</item>
    -->
        <item name="android:progressBarStyle">@style/ProgressBar.Financisto</item>

        <item name="background">@drawable/ab_solid_financisto</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_financisto</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_financisto</item>
        <item name="progressBarStyle">@style/ProgressBar.Financisto</item>
    </style>
    <style name="ActionBar.Transparent.Financisto" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/ab_transparent_financisto</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Financisto</item>
        <item name="background">@drawable/ab_transparent_financisto</item>
        <item name="progressBarStyle">@style/ProgressBar.Financisto</item>
    </style>

    <style name="ActionBarTabStyle.Financisto" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_financisto</item>
    </style>


    <!-- ======================================================================================================== -->
    <!-- Widget -->
    <!-- ======================================================================================================== -->
    <style name="Widget">
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="Widget.Container" parent="@style/Widget">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/widget_background</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">@dimen/space_small</item>
        <item name="android:layout_marginRight">@dimen/space_small</item>
    </style>
    <style name="Widget.Action.Center" parent="@style/Widget.Action">
        <item name="android:background">@drawable/widget_center_background</item>
        <item name="android:layout_width">@dimen/recommended_touch_size</item>
        <item name="android:layout_height">@dimen/recommended_touch_size</item>
    </style>
    <style name="Widget.Action.Left" parent="@style/Widget.Action">
        <item name="android:background">@drawable/widget_left_background</item>
        <item name="android:layout_width">@dimen/recommended_touch_size</item>
        <item name="android:layout_height">@dimen/recommended_touch_size</item>
    </style>
    <style name="Widget.Action.Right" parent="@style/Widget.Action">
        <item name="android:background">@drawable/widget_right_background</item>
        <item name="android:layout_width">@dimen/recommended_touch_size</item>
        <item name="android:layout_height">@dimen/recommended_touch_size</item>
    </style>

    <style name="Widget.Action" parent="@style/Widget">
        <item name="android:paddingLeft">6.0dip</item>
        <item name="android:paddingTop">0.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:paddingBottom">0.0dip</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="Widget.Logo" parent="@style/Widget">
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingRight">2.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">@dimen/recommended_touch_size</item>
        <item name="android:layout_height">@dimen/recommended_touch_size</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- ======================================================================================================== -->
    <!-- Financisto Dialog -->
    <style name="FinancistoDialog" parent="@style/Theme.AppCompat">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- ======================================================================================================== -->
    <!-- Spinner theme (to add parent theme -->
    <style name="SpinnerAppTheme" parent="android:Widget.Holo.Spinner"></style>

    <!-- ======================================================================================================== -->
    <!-- Drop down list view -->
    <style name="DropDownListView.Financisto" parent="@style/Widget.AppCompat.ListView.DropDown">

    </style>


    <style name="DropDownNav.Financisto" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_financisto</item>
        <!--
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_financisto</item>
        <item name="android:dropDownSelector">@drawable/activated_background2</item>
        -->
    </style>




    <style name="ProgressBar.Financisto" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_financisto</item>
    </style>

    <style name="ActionButton.CloseMode.Financisto" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_financisto</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme
    <style name="Theme.Financisto.Widget" parent="@style/Theme.AppCompat">
        <item name="dropDownListViewStyle">@style/DropDownListView.Financisto</item>
    </style>
    -->


    <!-- CheckBox -->
    <!-- ======================================================================================================== -->

    <style name="CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Button -->
    <!-- ======================================================================================================== -->

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/f_blue_lighter1</item>
    </style>

    <style name="Button.Select" parent="SpinnerAppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/f_blue_lighter1</item>
    </style>

    <style name="Button.Borderless">
        <!--
                <item name="android:background">@drawable/btn_borderless</item>
        -->
    </style>

    <!-- EditText -->
    <!-- ======================================================================================================== -->

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextUserInput" parent="EditText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/f_blue_lighter1</item>
    </style>

    <style name="EditText.Field">
        <item name="android:paddingBottom">12dp</item>
    </style>


    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/text_primary</item>
        <!--
        <item name="android:listSelector">@drawable/activated_background2</item>
        -->
    </style>

    <style name="TextViewUserInput" parent="TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/f_blue_lighter1</item>
    </style>

    <style name="TextView.Select" parent="SpinnerAppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <!--
        <item name="android:listSelector">@drawable/activated_background2</item>
        -->
    </style>

    <style name="ListItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:clickable">true</item>
        <!--
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        -->
        <item name="android:minHeight">@dimen/recommended_touch_size</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/space_small</item>
        <item name="android:paddingLeft">@dimen/space_small</item>
        <item name="android:paddingRight">@dimen/space_small</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
<!--        <item name="android:listSelector">@drawable/btn_borderless</item>
        <item name="android:listSelector">@drawable/activated_background2</item>
-->
    </style>

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator</item>
        <item name="android:background">@color/separator</item>
    </style>

    <style name="Separator.Vertical">
        <item name="android:layout_width">@dimen/separator</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/separator</item>
    </style>

    <style name="Separator.Vertical.Thin">
        <item name="android:layout_width">@dimen/separator_thin</item>
    </style>

    <style name="CupcakeDialog" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="TextAppearance" parent="android:TextAppearance.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:antialias">true</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="TextAppearance.ZeroAmount">
        <item name="android:textColor">@android:color/secondary_text_dark</item>
    </style>
    <style name="TextAppearance.PositiveAmount" parent="android:TextAppearance.Small">
        <item name="android:textColor">#39b54a</item>
    </style>
    <style name="TextAppearance.NegativeAmount" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/f_red</item>
    </style>
    <style name="TextAppearance.BalanceAmount">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#737373</item>
    </style>
    <style name="TextAppearance.ZeroAmountBig">
        <item name="android:textColor">@android:color/secondary_text_dark</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="TextAppearance.PositiveAmountBig" parent="android:TextAppearance">
        <item name="android:textColor">@color/f_green</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="TextAppearance.NegativeAmountBig" parent="android:TextAppearance">
        <item name="android:textColor">@color/f_red</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="MinusButton">
        <item name="android:src">@drawable/ic_action_cancel</item>
    </style>
    <style name="PlusButton">
        <item name="android:src">@drawable/ic_action_new</item>
    </style>
    <style name="MoreButton" parent="android:Widget.Holo.Spinner">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">@dimen/space_xlarge</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="SplitButton">
        <item name="android:src">@drawable/ic_action_split</item>
    </style>
    <style name="UpButton">
        <item name="android:background">@drawable/btn_circle</item>
        <item name="android:src">@drawable/ic_btn_round_up</item>
    </style>
    <style name="DownButton">
        <item name="android:background">@drawable/btn_circle</item>
        <item name="android:src">@drawable/ic_btn_round_down</item>
    </style>
    <style name="TopButton">
        <item name="android:background">@drawable/btn_circle</item>
        <item name="android:src">@drawable/ic_btn_round_top</item>
    </style>
    <style name="BottomButton">
        <item name="android:background">@drawable/btn_circle</item>
        <item name="android:src">@drawable/ic_btn_round_bottom</item>
    </style>
    <style name="UpDownButton">
        <item name="android:background">@drawable/btn_circle</item>
        <item name="android:src">@drawable/ic_btn_round_updown</item>
    </style>
    <style name="CalcButton">
        <item name="android:background">@drawable/btn_circle</item>
        <item name="android:src">@drawable/ic_btn_round_calc</item>
    </style>
    <style name="TallTitleBarTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="ButtonBar">
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingRight">4dip</item>
        <item name="android:paddingBottom">1dip</item>
        <item name="android:background">@color/f_dark</item>
        <item name="android:minHeight">@dimen/recommended_touch_size</item>

    </style>


</resources>