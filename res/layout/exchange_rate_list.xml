<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<ListView android:id="@android:id/list" 
		style="@style/ListView" android:minHeight="@dimen/recommended_touch_size"
		android:layout_weight="1" android:layout_height="wrap_content">
	</ListView>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListItem"
	 android:id="@+id/emptyView"
    android:paddingLeft="@dimen/space_large"
    android:paddingRight="@dimen/space_large">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="12dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_action_download"
        android:layout_centerVertical="true" />

    <TextView
        android:text="@string/no_exchange_rates" 
        style="@style/TextView"
        android:layout_width="fill_parent"
        android:textSize="@dimen/text_xlarge" />

</LinearLayout>


	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_alignParentBottom="true"
		android:paddingTop="2dp">
        <Spinner android:id="@+id/spinnerFromCurrency" android:layout_width="wrap_content"
                 android:layout_height="wrap_content" android:layout_weight="1"/>
        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content" android:id="@+id/bFlip"
                     android:src="@drawable/ic_btn_switch" android:background="@drawable/btn_circle" />
        <Spinner android:id="@+id/spinnerToCurrency" android:layout_width="wrap_content"
                 android:layout_height="wrap_content" android:layout_weight="1"/>
	</LinearLayout>

</RelativeLayout>
