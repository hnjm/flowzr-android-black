<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">

 <RelativeLayout  style="@style/Widget.Container">

    <ImageView android:id="@+id/action_list_template" android:layout_alignParentRight="true"
               android:src="@drawable/ic_action_copy" style="@style/Widget.Action.Right"/>

    <ImageView android:id="@+id/add_transfer"   android:layout_height="match_parent" android:layout_toLeftOf="@id/action_list_template"
               android:src="@drawable/ic_action_import_export" style="@style/Widget.Action.Center"/>

    <ImageView android:id="@+id/add_transaction"  android:layout_height="match_parent" android:layout_toLeftOf="@id/add_transfer"
               android:src="@drawable/ic_action_new" style="@style/Widget.Action.Center" />

 <RelativeLayout  android:layout_width="fill_parent" android:layout_height="fill_parent"
 android:layout_toLeftOf="@id/add_transaction" android:layout_alignParentLeft="true" >

        <ImageView android:id="@+id/account_icon" android:layout_alignParentLeft="true" android:layout_centerVertical="true"
         style="@style/Widget.Logo"    android:src="@drawable/icon"/>

            <LinearLayout android:orientation="vertical"
            android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_toRightOf="@id/account_icon"
            android:layout_centerVertical="true">


        <TextView android:id="@+id/line1" android:layout_width="fill_parent" android:paddingLeft="5dp"
                  android:layout_height="wrap_content" android:singleLine="true"
                  android:textColor="@color/f_light" android:ellipsize="end" android:textSize="@dimen/text_xsmall"
                  />

        <TextView android:layout_width="fill_parent" android:singleLine="true" android:ellipsize="end"
                  android:layout_height="wrap_content" android:id="@+id/note" android:paddingLeft="5dp"
                  android:textSize="@dimen/text_normal"/>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>