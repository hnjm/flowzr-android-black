<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent">

	<ImageView android:id="@+id/icon"
		android:layout_height="44dp"
		android:layout_width="44dp"
		android:elevation="6dp"
		android:src="@drawable/account_type_card_visa"
		android:layout_marginTop="@dimen/space_normal"
		android:layout_marginRight="@dimen/space_large"
		android:layout_marginLeft="@dimen/space_normal"/>

	<ImageView android:id="@+id/active_icon" android:src="@drawable/icon_lock"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:paddingLeft="22dp" android:paddingRight="10dp"/>

	<TextView android:layout_width="wrap_content"
		style="@style/TextView" android:textSize="@dimen/text_small"	
		android:layout_height="wrap_content" android:singleLine="true"
		android:id="@+id/top" android:text="top"
		android:paddingTop="@dimen/space_normal" android:layout_toRightOf="@+id/icon"/>

	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/layout" android:layout_alignLeft="@id/top"
		android:layout_below="@id/top" android:layout_width="fill_parent">
		<TextView android:id="@+id/center" android:text="center"
			android:singleLine="true" android:layout_width="wrap_content"
			android:layout_weight="1" android:layout_height="wrap_content"
			style="@style/TextView" android:textSize="@dimen/text_large"
			android:layout_marginTop="-5dp"/>
		<TextView android:layout_width="wrap_content"
			android:singleLine="true" android:id="@+id/right_center"
			android:text="right_center" android:paddingLeft="5dp"
			style="@style/TextView" android:textSize="@dimen/text_large"
			android:layout_height="fill_parent" android:gravity="bottom" />
	</LinearLayout>

	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/layout1" android:layout_width="fill_parent"
		android:layout_marginBottom="@dimen/space_small" android:layout_alignLeft="@id/layout"
		android:layout_below="@id/layout">
		<TextView android:text="" android:id="@+id/bottom"
			android:layout_width="wrap_content" android:singleLine="true"
			android:layout_height="wrap_content" android:layout_weight="1"
			style="@style/TextView" android:textSize="@dimen/text_small"/>
		
		<TextView android:layout_width="wrap_content"
			style="@style/TextView" android:textSize="@dimen/text_small"
			android:singleLine="true" android:layout_height="wrap_content"
			android:id="@+id/right" android:text="" android:paddingLeft="5dp" />
	</LinearLayout>

	<ProgressBar android:id="@+id/progress" android:max="100"
		android:layout_alignParentRight="true" android:layout_width="fill_parent"
		android:progress="50" android:paddingBottom="@dimen/space_normal"
		android:layout_height="16dp" style="@style/ProgressBarBudget" android:layout_alignLeft="@id/layout1" android:layout_below="@id/layout1"/>

	<TextView android:id="@+id/progress_text" android:text="progress / text"
		android:layout_alignParentRight="true" android:layout_width="fill_parent"
		android:gravity="center" style="@style/TextView" android:textSize="@dimen/text_small"
		android:layout_height="24dp" android:layout_alignLeft="@id/layout1" android:layout_below="@id/layout1"/>

</RelativeLayout>
