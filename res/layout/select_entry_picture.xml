<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/top_layout" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:paddingRight="?android:attr/scrollbarSize"
	android:background="@drawable/activated_background"
	android:orientation="horizontal" android:gravity="center_vertical"
	android:focusable="true" android:clickable="true">

	<LinearLayout
		android:layout_width="64dp" android:layout_gravity="center" android:gravity="center"
		android:layout_height="@dimen/recommended_touch_size">

		<ImageView android:layout_height="24dp"
			android:layout_width="24dp" android:background="@drawable/ic_photo_camera_white_48dp"
			android:layout_gravity="center" android:id="@+id/icon"
			android:focusable="true" android:clickable="true" />

	</LinearLayout>

	<RelativeLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_marginLeft="8dip"
		android:layout_marginTop="3dip" android:layout_marginBottom="3dip"
		android:layout_weight="1" android:duplicateParentState="true">
		<TextView android:id="@+id/label" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:singleLine="true"
			style="@style/TextView" android:textSize="@dimen/text_small" 
			android:ellipsize="marquee" android:fadingEdge="horizontal"
			android:duplicateParentState="true" android:visibility="gone"/>
		<TextView android:id="@+id/data" android:layout_width="wrap_content"
			android:layout_height="@dimen/recommended_touch_size" android:layout_below="@+id/label"
			android:layout_alignLeft="@+id/label" style="@style/TextView"
			android:textSize="@dimen/text_normal"
			android:layout_marginLeft="@dimen/space_xxlarge" android:layout_marginTop="@dimen/space_large"
			android:maxLines="1" android:duplicateParentState="true" />
	</RelativeLayout>
	<ImageView android:id="@+id/picture" android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:focusable="true" android:clickable="true" android:padding="2dp"/>
	<ImageView style="@style/MinusButton" android:layout_width="wrap_content"
		android:id="@+id/plus_minus" android:layout_height="wrap_content"
		android:focusable="true" android:clickable="true" 
		android:visibility="gone" />
</LinearLayout>
