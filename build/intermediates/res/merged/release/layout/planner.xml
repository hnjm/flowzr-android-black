<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:paddingTop="@dimen/dynamic_margin_narrow_vertical"
	android:paddingBottom="@dimen/dynamic_margin_narrow_vertical"
    android:paddingLeft="@dimen/dynamic_margin_narrow_horizontal"
    android:paddingRight="@dimen/dynamic_margin_narrow_horizontal"	
	android:orientation="vertical" >

    <include layout="@layout/total_text"/>


    <TextView android:layout_width="fill_parent" android:id="@+id/period"
              android:layout_height="@dimen/recommended_touch_size"
              android:gravity="center_horizontal|center_vertical" android:layout_marginBottom="5dp"
              style="@style/TextView" android:textSize="@dimen/text_large"
              android:ellipsize="marquee" android:singleLine="true"/>



    <ListView
        android:id="@android:id/list"
        style="@style/ListView"
        android:paddingRight="@dimen/dynamic_margin_narrow_horizontal"
        android:paddingLeft="@dimen/dynamic_margin_narrow_horizontal"/>

	<TextView 	
		android:id="@id/android:empty"
		android:text="@string/no_transactions"
        style="@style/TextView"
        android:layout_width="0dp"        
        android:layout_weight="1"
        android:textSize="@dimen/text_large"/>


    <TextView android:id="@+id/integrity_error"
		      android:text="@string/integrity_error"
        	  style="@style/TextView"
              android:textColor="#f26522" 
              android:visibility="gone"/>


</LinearLayout>
