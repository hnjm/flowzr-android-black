    <LinearLayout
        android:id="@+id/container_V"
	    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent" android:background="@color/f_dark"
        android:layout_height="@dimen/recommended_touch_size">

    <LinearLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"    

        android:layout_width="match_parent"
        android:layout_height="@dimen/recommended_touch_size"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"       
        android:orientation="horizontal"
    	style="@style/ButtonBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">        
        <TextView
 	       android:id="@+id/total_title"
            style="@style/TextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/balance"
            android:textSize="@dimen/text_xlarge" />

        <TextView
            android:id="@+id/total"
            style="@style/TextView"
            android:textSize="@dimen/text_xlarge" />
            
        <ImageView style="@style/MoreButton" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
            
    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
 






