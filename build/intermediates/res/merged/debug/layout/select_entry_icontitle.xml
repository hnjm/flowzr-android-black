<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_layout" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingRight="?android:attr/scrollbarSize"
    android:background="@drawable/activated_background"
    android:orientation="horizontal" android:gravity="center_vertical"
    android:focusable="true" android:clickable="true">

    <LinearLayout
        android:layout_width="64dp" android:layout_gravity="center" android:gravity="center"
        android:layout_height="@dimen/recommended_touch_size">

        <ImageView android:layout_height="24dp"
            android:layout_width="24dp"
            android:layout_gravity="center" android:id="@+id/icon"
            android:focusable="true" android:clickable="true" />

    </LinearLayout>


    <TextView android:id="@+id/data" android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/space_xlarge"
        android:layout_height="@dimen/recommended_touch_size"  android:layout_marginTop="@dimen/space_normal"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_large" style="@style/TextViewUserInput"
        android:maxLines="1" android:duplicateParentState="true"
        android:layout_weight="1" />

    <ImageView android:layout_height="24dp" android:layout_width="24dp" android:layout_marginTop="@dimen/space_normal"
        android:background="@drawable/ic_arrow_drop_down_white_48dp"  android:layout_marginLeft="@dimen/space_xlarge"
        android:focusable="true" android:clickable="true" />

</LinearLayout>
