<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">


 <RelativeLayout  style="@style/Widget.Container">

 <RelativeLayout  android:layout_width="wrap_content" android:layout_height="fill_parent"
  android:layout_alignParentLeft="true" style="@style/Widget.Action.Left">

        <ImageView android:id="@+id/account_icon" android:layout_alignParentLeft="true" android:layout_centerVertical="true"
         style="@style/Widget.Logo"  android:src="@drawable/icon"
         android:layout_width="@dimen/recommended_touch_size" android:layout_height="@dimen/recommended_touch_size"
         />

            <LinearLayout android:orientation="vertical" android:id="@+id/account_layout"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@id/account_icon"
            android:layout_centerVertical="true">


        <TextView android:id="@+id/line1" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:singleLine="true"
                  android:textColor="@color/f_light" android:ellipsize="end" android:textSize="@dimen/text_xsmall"
                  style="@style/TextView"/>

        <TextView android:layout_width="wrap_content" android:singleLine="true" android:ellipsize="end"
                  android:layout_height="wrap_content" android:id="@+id/note"  style="@style/TextView"
                  android:textSize="@dimen/text_xsmall"/>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
