<FrameLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">

 <RelativeLayout  style="@style/Widget.Container">

    <ImageView android:id="@+id/action_list_template"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_content_copy"
        android:clickable="true"
        android:focusable="true"
        style="@style/Widget.Action.Right"/>

    <ImageView android:id="@+id/add_transfer"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/action_list_template"
        android:src="@drawable/ic_swap_vert"
        style="@style/Widget.Action.Center"/>

    <ImageView android:id="@+id/add_transaction"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/add_transfer"
        android:src="@drawable/ic_add"
        style="@style/Widget.Action.Center" />

 <RelativeLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
    android:layout_toLeftOf="@id/add_transaction"
     android:layout_alignParentLeft="true" >

        <ImageView android:id="@+id/account_icon"
            android:layout_marginLeft="@dimen/space_normal"
            android:layout_marginTop="@dimen/space_normal"
            android:layout_marginRight="@dimen/space_normal"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/Widget.Logo"
            android:src="@drawable/ic_launcher"/>

            <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@id/account_icon"
            android:layout_centerVertical="true">


        <TextView android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:paddingLeft="5dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
                  android:textColor="@color/f_light" android:ellipsize="end" android:textSize="@dimen/text_xsmall"
                  />

        <TextView android:layout_width="wrap_content" android:singleLine="true" android:ellipsize="end"
                  android:layout_height="wrap_content" android:id="@+id/note" android:paddingLeft="5dp"
                  android:textSize="@dimen/text_normal"/>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>