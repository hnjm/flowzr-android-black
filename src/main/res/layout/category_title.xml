<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/space_xlarge">

    <ToggleButton android:layout_width="@dimen/recommended_touch_size"
        android:layout_height="@dimen/recommended_touch_size"
        android:layout_margin="@dimen/space_large"
        android:layout_gravity="center"
        android:id="@+id/toggle"
        android:textOn=""
        android:textOff=""
        android:background="@drawable/btn_toggle_income_expense_bg" />

    <EditText android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_large"
        android:layout_marginRight="@dimen/space_large"
        android:hint="@string/title"
        android:id="@+id/title" style="@style/TextViewUserInput"
        android:focusableInTouchMode="true"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/text_xxlarge">
    </EditText>

</LinearLayout>