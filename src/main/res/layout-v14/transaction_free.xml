<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:fab="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="0dp"
        android:paddingTop="?android:attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/main_layout">

		<include layout="@layout/transaction_total_text"/>

		<LinearLayout android:layout_height="wrap_content"
			android:background="@color/date_sel_bg_color"
			android:elevation="8dp"
			android:paddingTop="@dimen/space_normal"
			android:paddingBottom="@dimen/space_normal"
			android:layout_width="match_parent">

			<ImageButton android:id="@+id/status"
				android:elevation="4dp"
				android:layout_marginLeft="@dimen/space_normal" android:layout_gravity="center"
				android:layout_marginRight="@dimen/space_large"
				android:layout_width="@dimen/recommended_touch_size"
				android:layout_height="@dimen/recommended_touch_size"
				android:background="@null"
				android:src="@drawable/transaction_status_unreconciled_2"/>
			<Button android:layout_width="0dp" android:gravity="center"
				android:text="04/03/09"  android:id="@+id/date"
				android:elevation="8dp"
				android:layout_height="wrap_content" android:layout_weight="1" />
			<Button android:layout_width="wrap_content" android:gravity="center"
				android:text="12:56 PM" android:id="@+id/time"
				android:elevation="8dp"
				android:layout_marginRight="@dimen/space_normal"
				android:layout_height="wrap_content" />
		</LinearLayout>
		<ScrollView
			android:id="@+id/scroll"
			android:layout_weight="1"
			android:layout_height="0dp"
			android:layout_width="wrap_content"
			android:scrollbars="none">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingBottom="?listPreferredItemHeight"
			android:orientation="vertical"
			android:id="@+id/list">
		</LinearLayout>

		</ScrollView>

	</LinearLayout>

	<com.flowzr.view.MyFloatingActionMenu
		android:id="@+id/menu1"
		fab:layout_anchor="@id/main_layout"
		fab:layout_anchorGravity="bottom|right|end"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/space_large"
		android:layout_marginRight="@dimen/space_large"
		android:src="@drawable/ic_check"
		fab:menu_icon="@drawable/ic_check"
		style="@style/FloatingActionMenu">

		<com.flowzr.view.FloatingActionButton
			android:id="@+id/saveAddButton"
			android:src="@drawable/ic_add"
			fab:fab_label="@string/save_and_new"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			fab:fab_size="normal"
			fab:menu_labels_style="@style/MenuLabelsStyle"
			style="@style/FloatingActionButton" />

		<com.flowzr.view.FloatingActionButton
			android:id="@+id/saveButton"
			android:src="@drawable/ic_check"
			fab:fab_label="@string/save"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			fab:fab_size="normal"
			fab:menu_labels_style="@style/MenuLabelsStyle"
			style="@style/FloatingActionButton" />

	</com.flowzr.view.MyFloatingActionMenu>

	<include layout="@layout/toolbar"/>

</android.support.design.widget.CoordinatorLayout>