<android.support.design.widget.CoordinatorLayout
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout
    android:layout_margin="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_layout">

        <include layout="@layout/total_text"/>

        <ListView
            android:layout_marginRight="@dimen/space_small"
            android:id="@android:id/list"
            style="@style/ListView"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/space_small"
            android:paddingLeft="@dimen/space_small"/>

        <TextView
            android:id="@id/android:empty"
            android:text="@string/no_transactions"
            style="@style/TextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_large"
            android:layout_height="0dp" />

        <TextView android:id="@+id/integrity_error"
                  android:text="@string/integrity_error"
                  style="@style/TextView"
                  android:textColor="#f26522"
                  android:visibility="gone"/>
        <FrameLayout
            android:id="@+id/fragment_land_container"
            android:layout_width="0dp"
            android:layout_height="0dp" />

    </LinearLayout>


    <com.flowzr.view.MyFloatingActionMenu
        android:id="@+id/menu1"
        fab:layout_anchor="@id/main_layout"
        fab:layout_anchorGravity="bottom|right|end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_large"
        android:layout_marginRight="@dimen/space_large"
        android:src="@drawable/ic_add"
        fab:menu_icon="@drawable/ic_add"
        style="@style/FloatingActionMenu">

        <com.flowzr.view.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_label="@string/add_transfer"
            android:src="@drawable/ic_swap_vert"
            fab:fab_size="normal"
            style="@style/FloatingActionButton" />

        <com.flowzr.view.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            fab:fab_size="normal"
            fab:fab_label="@string/add_transaction"
            style="@style/FloatingActionButton" />

    </com.flowzr.view.MyFloatingActionMenu>

</android.support.design.widget.CoordinatorLayout>