<resources>

    <!-- ======================================================================================================== -->
    <!--
    Further attributes give fine grained control over colorizing controls,
    see: colorControlNormal, colorControlActivated, colorControlHighlight,
    colorButtonNormal, colorSwitchThumbNormal, colorEdgeEffect, statusBarColor
    and navigationBarColor.
    -->
    <style name="Theme.Financisto" parent="Theme.AppCompat.NoActionBar">
        <item name="actionMenuTextColor">@color/f_blue</item>
        <item name="colorPrimary">@color/f_dark_lighter2</item> 
        <item name="colorPrimaryDark">@color/f_dark</item> 
        <item name="colorControlHighlight">@color/f_blue_lighter1</item> 
        <item name="colorControlNormal">@color/f_blue_lighter2</item> 
        <item name="colorAccent">@color/f_blue</item>

         <!-- drawer navigationicon  edit tooltips -->
        <item name="android:textColorSecondary">@color/f_light_darker1</item> 
        <!-- toobar -->
        <item name="titleTextColor">@color/f_blue_lighter3</item>
        <item name="subtitleTextColor">@color/f_blue_lighter2</item>

        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="dialog" parent="Base.Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/text_accent</item>
    </style>

    <!-- ======================================================================================================== -->
    <!-- Widget -->
    <!-- ======================================================================================================== -->
    <style name="Widget">
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="Widget.Container" parent="@style/Widget">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/widget_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">@dimen/space_small</item>
        <item name="android:layout_marginRight">@dimen/space_small</item>
    </style>
    <style name="Widget.Action.Center" parent="@style/Widget.Action">
        <item name="android:background">@drawable/widget_center_background</item>
        <item name="android:layout_width">@dimen/recommended_touch_size</item>
        <item name="android:layout_height">@dimen/recommended_touch_size</item>
    </style>
    <style name="Widget.Action.Left" parent="@style/Widget.Action">
        <item name="android:background">@drawable/widget_left_background</item>
        <item name="android:layout_width">@dimen/recommended_touch_size</item>
        <item name="android:layout_height">@dimen/recommended_touch_size</item>
    </style>
    <style name="Widget.Action.Right" parent="@style/Widget.Action">
        <item name="android:background">@drawable/widget_right_background</item>
        <item name="android:layout_width">@dimen/recommended_touch_size</item>
        <item name="android:layout_height">@dimen/recommended_touch_size</item>
    </style>

    <style name="Widget.Action" parent="@style/Widget">
        <item name="android:paddingLeft">6.0dip</item>
        <item name="android:paddingTop">0.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:paddingBottom">0.0dip</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.Logo" parent="@style/Widget">
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingRight">2.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">@dimen/recommended_touch_size</item>
        <item name="android:layout_height">@dimen/recommended_touch_size</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- ======================================================================================================== -->
    <!-- Financisto Dialog -->
    <style name="FinancistoDialog" parent="@style/Theme.AppCompat">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- ======================================================================================================== -->
    <!-- Spinner theme (to add parent theme -->
    <style name="SpinnerAppTheme" parent="android:Widget.Spinner">

        <item name="android:background">@drawable/ic_expand_more</item>
    </style>

    <!-- ======================================================================================================== -->
    <!-- Drop down list view -->
    <style name="DropDownListView.Financisto" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:background">@drawable/ic_expand_more</item>
    </style>


    <style name="DropDownNav.Financisto" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/ic_expand_more</item>
        <!--
                <item name="android:dropDownSelector">@drawable/activated_background2</item>
                -->
    </style>

    <style name="ProgressBar.Financisto" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
<!--
        <item name="android:progressDrawable">@drawable/progress_horizontal_financisto</item>
        -->
    </style>

    <style name="ActionButton.CloseMode.Financisto" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
<!--
        <item name="android:background">@drawable/btn_cab_done_financisto</item>
        -->
    </style>

    <!-- CheckBox -->
    <!-- ======================================================================================================== -->

    <style name="CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Button -->
    <!-- ======================================================================================================== -->

    <!-- EditText -->
    <!-- ======================================================================================================== -->

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextUserInput" parent="EditText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/f_blue_lighter2</item>
    </style>

    <style name="EditText.Field">
        <item name="android:paddingBottom">12dp</item>
    </style>


    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
        <!--
        <item name="android:listSelector">@drawable/activated_background2</item>
        -->
    </style>

    <style name="TextViewUserInput" parent="TextView">
        <item name="android:textColor">@color/f_blue_lighter2</item>
    </style>

    <style name="TextView.Select">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">@dimen/text_large</item>
        <!--
        <item name="android:listSelector">@drawable/activated_background2</item>
        -->
    </style>
    <!--
        android:id="@+id/top_layout" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="?android:attr/scrollbarSize"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="?android:attr/selectableItemBackground"
    -->
    <style name="ListItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:minHeight">@dimen/recommended_touch_size</item>
        <item name="android:background">@drawable/activated_background2</item>
    </style>

    <style name="ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/space_small</item>
        <item name="android:paddingLeft">@dimen/space_small</item>
        <item name="android:paddingRight">@dimen/space_small</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <!-- <item name="android:listSelector">@drawable/activated_background2</item> -->
    </style>

    <style name="TextAppearance" parent="android:TextAppearance.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:antialias">true</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="TextAppearance.ZeroAmount">
        <item name="android:textColor">@android:color/secondary_text_dark</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.ZeroAmountBig">
        <item name="android:textColor">@android:color/secondary_text_dark</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.PositiveAmountBig" parent="android:TextAppearance">
        <item name="android:textColor">@color/positive_amount</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.NegativeAmountBig" parent="android:TextAppearance">
        <item name="android:textColor">@color/negative_amount</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MinusButton">
        <item name="android:src">@drawable/ic_cancel</item>
    </style>
    <style name="PlusButton">
        <item name="android:src">@drawable/ic_add</item>
    </style>
    <!-- parent="android:Widget.Spinner" -->
    <style name="MoreButton" >
        <item name="android:background">@drawable/ic_expand_more</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">@dimen/space_xlarge</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
