    <style name="CalcButton">
        <item name="android:src">@drawable/ic_action_calculator</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingRight">4dip</item>
        <item name="android:paddingBottom">1dip</item>
        <item name="android:background">@color/f_dark</item>
        <item name="android:minHeight">@dimen/recommended_touch_size</item>

    </style>
    <style name="ProgressBarBudget" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_height">@dimen/space_small</item>
    </style>


    <style name="PadButtonStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/pad_button_background</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minWidth">@dimen/recommended_touch_size</item>
        <item name="android:minHeight">@dimen/recommended_touch_size</item>
        <item name="android:textSize">@dimen/text_xxxlarge</item>
        <item name="android:textColor">@color/pad_button_text_color</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">0dp</item>
    </style>



    <style name="FloatingActionButton">
        <item name="android:textColor">@color/text_primary</item>
        <item name="fab_shadowColor">@color/f_dark_lighter1</item>
        <item name="fab_showShadow">false</item>
        <item name="fab_colorNormal">@color/fabColor</item>
        <item name="fab_colorPressed">@color/fabPressed</item>
        <item name="fab_colorRipple">@color/fabRipple</item>

    </style>

    <style name="FloatingActionMenu">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="menu_showShadow">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="menu_colorNormal">@color/fabColor</item>
        <item name="menu_colorPressed">@color/fabPressed</item>
        <item name="menu_colorRipple">@color/fabRipple</item>

    </style>

    <style name="MenuLabelsStyle">
        <item name="android:textColor">@color/text_accent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>