<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/space_small"
        android:paddingTop="?android:attr/actionBarSize"
        android:layout_marginTop="@dimen/space_xlarge"
        android:focusable="true">

        <include layout="@layout/layout_title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="72dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="@dimen/recommended_touch_size">

                    <ImageView android:layout_height="16dp"
                        android:layout_width="16dp"
                        android:contentDescription="@string/project"
                        android:layout_gravity="center"
                        android:id="@+id/icon"
                        android:src="@drawable/ic_lock_open"
                        android:layout_marginLeft="@dimen/dynamic_margin_narrow_vertical"
                        android:focusable="true" android:clickable="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView android:id="@+id/data" android:layout_width="0dp"
                        android:layout_weight="1" android:layout_marginTop="@dimen/space_normal"
                        android:layout_height="@dimen/recommended_touch_size"
                        style="@style/TextView" android:textSize="@dimen/text_normal"
                        android:text="@string/is_active" />


                    <CheckBox android:id="@+id/isActive"
                        style="@style/CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    <include layout="@layout/toolbar"/>

</android.support.design.widget.CoordinatorLayout>